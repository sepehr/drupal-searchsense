    '#type' => 'checkbox',
    '#title' => t('Include unpublished nodes in suggestions.'),
    '#default_value' => variable_get('nodesense_suggest_unpublished', 1),
    '#return_value' => 1,
  );
  
  $form ['nodesense']['sort'] = array(
    '#type' => 'fieldset',
    '#title' => t('Sort order'),
    '#collapsible' => TRUE,
    '#collapsed' => TRUE,
  );
  
  $form ['nodesense']['sort']['nodesense_sort_orderby'] = array(
    '#type' => 'radios',
    '#title' => t('Sort suggestions by'),
    '#default_value' => variable_get('nodesense_sort_orderby', 'changed'),
    '#options' => array(
      'changed' => t('Update date'),
      'created' => t('Creation date'),
      'nid' => t('Node identifier'),
      'vid' => t('Revision identifier'),
    ),
  );
  
  $form ['nodesense']['sort']['nodesense_sort_order'] = array(
    '#type' => 'radios',
    '#title' => t('Sort order'),
    '#default_value' => variable_get('nodesense_sort_order', 'DESC'),
    '#options' => array(
      'DESC' => t('Descending'),
      'ASC' => t('Ascending'),
    ),
  );
  
  $form ['nodesense']['restrictions'] = array(
    '#type' => 'fieldset',
    '#title' => t('Restrictions'),
    '#collapsible' => TRUE,
    '#collapsed' => TRUE,
  );
  
  // Get a list of languages.
  $tmp = language_list();
  foreach ($tmp as $key => $language) {
    $tmp[$key] = $language->name;
  }

  $form ['nodesense']['restrictions']['nodesense_restrict_languages'] = array(
    '#type' => 'select',
    '#multiple' => TRUE,
    '#title' => t('Restrict suggestions to nodes in only these languages'),
    '#default_value' => variable_get('nodesense_restrict_languages', 'all'),
    '#options' => array('all' => 'All languages') + $tmp,
  );
  
  // Get a list of node types.
  $tmp = node_get_types();
  foreach ($tmp as $key => $type) {
    $tmp[$key] = $type->name;
  }

  $form ['nodesense']['restrictions']['nodesense_restrict_types'] = array(
    '#type' => 'select',
    '#multiple' => TRUE,
    '#title' => t('Restrict suggestions to nodes of these types'),
    '#default_value' => variable_get('nodesense_restrict_types', 'all'),
    '#options' => array('all' => 'All types') + $tmp,
  );
  unset($tmp);
  
  return $form;
}

