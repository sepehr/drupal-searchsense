 */

/**
 * Implements hook_searchsense.
 */
function nodesense_searchsense($string = '', $limit = 10) {
  $matches = array();
  $table = variable_get('nodesense_suggest_revision_title', TRUE) ? 'node_revisions' : 'node';
  
  if ($string) {
    $results = db_query_range("SELECT title FROM {$table} WHERE title LIKE '%s%%'", $string, 0, (int) $limit);
    while ($result = db_fetch_object($results)) {
      $matches[$result->title] = check_plain($result->title);
    }
  }

  return $matches;
}


